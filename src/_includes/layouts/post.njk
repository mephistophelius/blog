---
layout: layouts/base.njk
---

<section class="article-header">
  <h1 class="article-title">{{ title }}</h1>

  <div class="article-info">
    <time class="article-publish-time" datetime="{{ createDate | date }}">{{ createDate | date }}</time>
    <span>[</span>
    <span>Обновлено: </span>
    <time class="artiсle-update-time" datetime="{{ page.date | date }}">{{ page.date | date }}</time>
    <span>]</span>
    <span>::</span>
    <span class="article-author">{{ author }}</span>
  </div>

  {% if tags %}
  <div class="article-tags">
    <ul class="article-tag-list is-horizontal-list">
      {% for tag in tags %}
      <li><a href="tags/{{ tag }}">{{ tag }}</a></li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</section>

<section class="article-table-of-content">
  Содержание
</section>

<section class='article-content'>
  {{ content | safe }}
</section>

<section class="comments">
  {% comments %}
</section>
